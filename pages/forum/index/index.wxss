/* pages/forum/index/index.wxss */
page {
  background: #f4f4f4;
  min-height: 100%;
}

.container {
  background: #f4f4f4;
  min-height: 100%;
  width: 100%;
  height: auto;
  overflow: hidden;
}

.no-article {
  width: 100%;
  height: auto;
  margin: 0 auto;
}

.no-article .c {
  width: 100%;
  height: auto;
  margin-top: 400rpx;
}

.no-article .c text {
  margin: 0 auto;
  display: block;
  width: 258rpx;
  height: 29rpx;
  line-height: 29rpx;
  text-align: center;
  font-size: 29rpx;
  color: #999;
}

.article-list {
  width: 100%;
  height: auto;
  overflow: hidden;
  background: #fff;
  padding-left: 30rpx;
  border-top: 1px solid #e1e1e1;
}

.item {
  height: 212rpx;
  width: 720rpx;
  background: #fff;
  padding: 30rpx 30rpx 30rpx 0;
  border-bottom: 1px solid #e1e1e1;
}

.item:last-child {
  border-bottom: 1px solid #fff;
}

.item .img {
  float: left;
  width: 150rpx;
  height: 150rpx;
}

.item .info {
  position: relative;
  float: right;
  width: 540rpx;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  align-items: flex-start;
  padding-left: 20rpx;
}

.item .info .title {
  font-size: 40rpx;
  width: 480rpx;
  color: #333;
  line-height: 40rpx;
}

.item .info .bottomInfo{
  width: 480rpx;
  position: relative;
  flex-direction: row;
  flex-wrap: nowrap;
  /* margin-top: 8rpx; */
  
}
.item .info .bottomInfo .author {
  width: 120rpx;
  font-size: 24rpx;
  color: #888;
  line-height: 40rpx;
}
.item .info .bottomInfo .publishTime {
  width: 240rpx;
  font-size: 24rpx;
  color: #888;
  line-height: 40rpx;
}

.item .info .bottom-Info{
  width:480rpx;
  height: 26rpx;
  position: relative;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-end;
}

.item .info .bottom-Info .info-item{
  width: 50rpx;
  height:26rpx;
  font-size: 20rpx;
  display: flex;
  flex-direction: row;
  margin-right: 8rpx;
}

.item .info .bottom-Info .info-item .img{
  width:26rpx;
  height:26rpx
}