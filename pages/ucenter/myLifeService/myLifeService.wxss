/* pages/ucenter/myLifeService/myLifeService.wxss */
page {
  height: 100%;
  width: 100%;
  background: #f4f4f4;
}

.container {
  background: #f4f4f4;
  height: auto;
  overflow: hidden;
  width: 100%;
}

.service_module{
  margin: 20rpx;
  padding-top: 60rpx;
  height: auto;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.service_module_box{
  padding: 20rpx;
  height: 250rpx;
  width: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  
}

.service_module_box_img{
  width: 150rpx;
  height: 150rpx;
}

.select_box1{
  width: 200rpx;
  height: 200rpx;
  position: relative;
  right: 0rpx;
  /* padding-top: 280rpx; */
  animation: myfirst 1s;
  overflow: hidden;
}

.select_box{
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  right: 0rpx;
  /* padding-top: 280rpx; */
  animation: myfirst 1s;
  overflow: hidden;
}

.select_one {
  width: 100%;
  padding-left: 20rpx;
  /* height: 30rpx; */
  position: relative;
  border-bottom: 1px solid #ccc;
  
  }
  /* 下拉过度效果 */@keyframes myfirst {
  from {
      height: 0rpx;
  }
  to {
      height: 210rpx;
  }}

.service_module_box_text{
  font-size: 24rpx;
}

.select_img{
  width: 30rpx;
  height: 30rpx;
}

