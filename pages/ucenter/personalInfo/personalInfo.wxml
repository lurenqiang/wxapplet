<!--pages/ucenter/personalInfo/personalInfo.wxml-->
<view class="container1">
  <view class="profile-info">
    <image class="avatar" src="{{userInfo.appletAvatar}}"></image>
    <view class="info">
      <text class="name">{{userInfo.nickname}}</text>
    </view>
  </view>

  <view class='separate'>
  </view>
  <view class="personalinfo-box">
    <button type="primary" class="improve-personinfo-btn" bindtap="improvePersonInfo">完善修改个人信息</button>
    <button type="primary" class="reset-password-btn" bindtap="resetPassword">重置密码</button>
    <button type="primary" class="reset-phone-btn" bindtap="resetPhone">重置电话</button>
  </view>
</view>
