<!--pages/ucenter/personalInfomation/updateInfo/updateInfo.wxml-->
<view class="weui-cells weui-cells_after-title">
 
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">图像</view>
                </view>
                <view class="weui-cell__bd">
                     <image class="weui-img" src="{{appletAvatar}}" bindtap="changeAvatar"/>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">昵称</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" name="nickname"  value='{{userInfo.nickname}}' bindinput ="getnickName"/>
                </view>
            </view>
 
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">真实姓名</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" name="realname"  value='{{userInfo.realname}}'  bindinput ="getrealName"/>
                </view>
            </view>

            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">地址</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" name="address"  value='{{userInfo.address}}'  bindinput ="getaddress"/>
                </view>
            </view>
            
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">性别</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" name="gender" value='{{sex}}'/>
                </view>
                <view class="weui-cell__ft">
                       <switch checked bindchange='switchChange'/>
                </view>
            </view>
 
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">生日</view>
                </view>
                <view class="weui-cell__bd">
                      <picker mode="date" value="{{date}}" start="1920-01-01"  bindchange="bindDateChange">  
                         <view class="picker" >  
                         {{dates}}  
                         </view>  
                     </picker> 

                </view>
            </view>

             <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">身份</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" name="userStatus" value='{{userStatus}}' disabled='{{isDisabled}}'/>
                </view>
                <view class="weui-cell__ft" wx:if = "{{userInfo.userStatus=='1'}}">
                       <switch checked bindchange='switchChange1' />
                </view>
            </view>
        </view>
        <view class="btn-area">
         <button type='primary' formType="submit" bindtap="updateDetail">提交</button>
         </view>
