}

.read_message_list .item{
  height: auto;
  width: 100%;
  background: #fff;
  padding: 30rpx;
  margin: 40rpx;
  border-bottom: 1px solid #e1e1e1;
}

.read_message_list .item .content{
  font-size: 24rpx;
  flex-wrap: wrap;
  padding: 20rpx;
}
