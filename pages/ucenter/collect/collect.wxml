<!--pages/ucenter/collect/collect.wxml-->
<view class="container">
  <view class="no-collect" wx:if="{{collectList.length <= 0}}">
    <view class="c">
      <text>还没有收藏</text>
    </view>
  </view>
  <view class="collect-list" wx:else>
    <view class="item" bindtap="openDetail" bindtouchstart="touchStart" bindtouchend="touchEnd" wx:for="{{collectList}}" wx:key="uuid" data-index="{{index}}">
      <image class="img" src="{{item.avatar}}"></image>
      <view class="info">
        <view class="title">{{item.title}}</view>
        <view class="author">{{item.author}}</view>
        <view class="publishTime">{{item.publishTime}}</view>
        <!-- <view class="price">{{item.retailPrice}}</view> -->
      </view>
    </view>
  </view>

</view>
